<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="robot_base" params="parent">

    <!-- Propriedades da base do robô Caramelo -->
    <xacro:property name="mass" value="22.0"/>
    <xacro:property name="width" value="0.580"/>   <!-- Comprimento -->
    <xacro:property name="depth" value="0.380"/>   <!-- Largura -->
    <xacro:property name="height" value="0.105"/>  <!-- Altura -->
    <xacro:property name="wheel_radius" value="0.05"/>

    <!-- Link da base (base_link agora toca o chão) -->
    <link name="base_link">
      <visual>
        <origin xyz="0 0 ${height/2.0}" rpy="0 0 0"/>
        <geometry>
          <box size="${width} ${depth} ${height}"/>
        </geometry>
        <material name="black">
          <color rgba="0.0 0.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 ${height/2.0}" rpy="0 0 0"/>
        <geometry>
          <box size="${width} ${depth} ${height}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="${mass}"/>
        <origin xyz="0 0 ${height/2.0}" rpy="0 0 0"/>
        <inertia
          ixx="${1/12.0 * mass * (height*height + depth*depth)}"
          iyy="${1/12.0 * mass * (width*width + depth*depth)}"
          izz="${1/12.0 * mass * (width*width + height*height)}"
          ixy="0.0" ixz="0.0" iyz="0.0"/>
      </inertial>
    </link>

    <!-- Joint com o footprint (ajustado para as dimensões do Caramelo) -->
    <joint name="base_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="base_link"/>
      <origin xyz="0 0 ${wheel_radius - 0.01}" rpy="0 0 0"/>
    </joint>

    <!-- Aparência no Gazebo -->
    <gazebo reference="base_link">
      <visual>
        <material>
          <ambient>0.0 0.0 0.0 1.0</ambient>
          <diffuse>0.0 0.0 0.0 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
          <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
      </visual>
    </gazebo>

  </xacro:macro>

</robot>
